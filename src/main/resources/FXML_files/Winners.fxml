<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.Controllers.WinnersController"
            style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #d0d0d0);"
            prefWidth="400" prefHeight="400">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label fx:id="resultLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="winnerLabel" style="-fx-font-size: 16px;"/>
            <VBox fx:id="winnersBox" spacing="5"/>
            <Label fx:id="personalResult" style="-fx-font-size: 16px; -fx-text-fill: darkblue;"/>
            <Label text="Do you want to join another game?" style="-fx-font-size: 14px;"/>
            <HBox spacing="20" alignment="CENTER">
                <RadioButton fx:id="disconnectRadio" text="Disconnect"/>
                <RadioButton fx:id="newGameRadio" text="Join new game"/>
            </HBox>
            <Button text="Confirm" onAction="#onConfirmAction"/>
        </VBox>
    </center>

</BorderPane>