<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="View.Controllers.ClaimRewardController"
      alignment="CENTER" spacing="20">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label fx:id="messageLabel"
           wrapText="true"
           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="20">
        <RadioButton text="Yes" toggleGroup="$choiceGroup" fx:id="yesButton"/>
        <RadioButton text="No" toggleGroup="$choiceGroup" fx:id="noButton"/>
    </HBox>

    <Button text="Confirm" onAction="#handleConfirm"/>

</VBox>