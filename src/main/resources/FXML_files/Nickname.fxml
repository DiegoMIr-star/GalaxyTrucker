<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.Controllers.NicknameController" alignment="CENTER" spacing="20" minWidth="300" minHeight="260">
    <Label text="Please chose your nickname:" />

    <TextField fx:id="nicknameField" promptText="Nickname" maxWidth="180"/>

    <Button text="Confirm" onAction="#onConfirmNickname" />
</VBox>