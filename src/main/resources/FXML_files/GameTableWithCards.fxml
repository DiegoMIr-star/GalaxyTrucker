<tabs>
   <Tab fx:id="gameTableTab" text="Game Table">
      <content>
         <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" />
      </content>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <center>
                  <Pane fx:id="rootPane" prefHeight="671.0" prefWidth="1092.0">
                  </Pane>
               </center>
               <right>
               <VBox alignment="CENTER_RIGHT" prefHeight="671.0" prefWidth="263.0" BorderPane.alignment="CENTER">
                  <children>
                     <BorderPane prefHeight="200.0" prefWidth="200.0">
                        <center>
                           <Label fx:id="playersNickname" prefHeight="100.0" prefWidth="210.0" textAlignment="CENTER" textOverrun="WORD_ELLIPSIS" BorderPane.alignment="CENTER">
                              <font>
                                 <Font size="20.0" />
                              </font>
                           </Label>
                        </center>
                     </BorderPane>
                        <StackPane prefHeight="471.0" prefWidth="415.0">
                           <children>
                              <ImageView fx:id="cardBackground" fitHeight="471.0" fitWidth="308.0" pickOnBounds="true" preserveRatio="true" />
                           <ImageView fx:id="cardImage" fitHeight="365.0" fitWidth="275.0" pickOnBounds="true" preserveRatio="true" />
                           </children>
                        </StackPane>
                     <Pane prefHeight="290.0" prefWidth="308.0">
