                        <ImageView fx:id="shipImage" fitHeight="679.0" fitWidth="937.0" pickOnBounds="true" preserveRatio="true" />
                        <BorderPane prefHeight="200.0" prefWidth="200.0">
                           <center>
                              <GridPane fx:id="shipGrid" gridLinesVisible="true" BorderPane.alignment="CENTER">
