                           <Button fx:id="drawCardButton" alignment="TOP_CENTER" layoutX="39.0" layoutY="7.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="231.0" text="Draw Card!" textAlignment="CENTER">
