                           </center>
                           <top>
                              <Pane prefHeight="45.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
                           </top>
                           <left>
                              <Pane prefHeight="200.0" prefWidth="45.0" BorderPane.alignment="CENTER" />
                           </left>
                        </BorderPane>
                     </children></StackPane>
               </children></AnchorPane>
      </content>
   </Tab>
